<% if notice.present? %>
  <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>


<h1 class="font-bold text-2xl"> Task Manager</h1>
<%= link_to "Create new one", tasks_new_path %>

<ul>
  <% @tasks.each do |task| %>
    <li class="border border-grey-200 rounded-md p-3 bg-grey-100 shadow mt-1 ">
      <% if task.completed? %>
        <i class="fa-regular fa-square-check"></i>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>
